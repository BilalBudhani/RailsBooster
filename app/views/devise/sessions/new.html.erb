<div class="hero-container">
  <h2 class="mb-6">Sign in</h2>
  <div class="card">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-field">
        <%= f.label :email, class: 'form-label mb-2' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
      </div>

      <div class="form-field">
        <%= f.label :password, class: 'form-label mb-2' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-field flex space-x-1 items-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'form-label' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Sign in", class: 'btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>